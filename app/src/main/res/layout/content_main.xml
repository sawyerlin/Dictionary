<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.slin.dictionary.MainActivity">

    <EditText
        android:id="@+id/langText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnTranslate"
        android:layout_toStartOf="@+id/btnTranslate"
        android:inputType="text" />

    <Button
        android:id="@+id/btnTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/langText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="translate"
        android:text="Translate" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="fsdqfjsdqfmioqejfslmjqfmsqdo  fjsqfj sdqmf fdsjqm fdsqfklsdjqflksq fsdjq kl"
        android:layout_below="@+id/langText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fr"
        android:id="@+id/rbFromFr"
        android:checked="false"
        android:layout_alignBaseline="@+id/rbFromEn"
        android:layout_alignBottom="@+id/rbFromEn"
        android:layout_toLeftOf="@+id/rbFromCh"
        android:layout_toStartOf="@+id/rbFromCh"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:onClick="changeRadio" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En"
        android:id="@+id/rbFromEn"
        android:checked="true"
        android:layout_below="@+id/langText"
        android:layout_toLeftOf="@+id/rbFromFr"
        android:layout_toStartOf="@+id/rbFromFr"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:selectAllOnFocus="false"
        android:clickable="true"
        android:onClick="changeRadio" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ch"
        android:id="@+id/rbFromCh"
        android:checked="false"
        android:layout_below="@+id/btnTranslate"
        android:layout_toRightOf="@+id/langText"
        android:layout_toEndOf="@+id/langText"
        android:clickable="true"
        android:onClick="changeRadio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:id="@+id/fromTextView"
        android:layout_alignTop="@+id/rbFromEn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/rbFromEn"
        android:layout_toLeftOf="@+id/rbFromEn"
        android:layout_toStartOf="@+id/rbFromEn"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_below="@+id/fromTextView"
        android:layout_alignLeft="@+id/fromTextView"
        android:layout_alignStart="@+id/fromTextView" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En"
        android:id="@+id/rbToEn"
        android:checked="false"
        android:layout_below="@+id/rbFromEn"
        android:layout_alignRight="@+id/rbFromEn"
        android:layout_alignEnd="@+id/rbFromEn"
        android:clickable="true"
        android:onClick="changeRadio" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ch"
        android:id="@+id/rbToCh"
        android:checked="false"
        android:layout_below="@+id/rbFromCh"
        android:layout_toRightOf="@+id/rbFromFr"
        android:layout_toEndOf="@+id/rbFromFr"
        android:clickable="true"
        android:onClick="changeRadio" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fr"
        android:id="@+id/rbToFr"
        android:checked="true"
        android:layout_below="@+id/rbFromFr"
        android:layout_alignLeft="@+id/rbFromFr"
        android:layout_alignStart="@+id/rbFromFr"
        android:clickable="true"
        android:onClick="changeRadio" />
</RelativeLayout>
